<div class="jumbotron">
	<h1>Live like a local.</h1>
	<div class="btn-group">
	  <button type="button" class="btn btn-lg btn-success dropdown-toggle" data-toggle="dropdown">
	    Choose a place <span class="caret"></span>
	  </button>
	  <ul class="dropdown-menu" role="menu">
	    <li><%= link_to 'San Francisco', :controller => 'listings', :action => 'city', :city => 'sf'%></li>
	    <li><%= link_to 'New York', :controller => 'listings', :action => 'city', :city => 'ny'%></li>
	  </ul>
	</div>
</div>

<div id="places">
	<h2>Explore places</h2>
	<table class="home">
    <tr>
      <td><%= link_to image_tag("sf.jpg", :alt => "sf", :class => "city"), :controller => 'listings', :action => 'city', :city => 'sf'%></td>
      <td><%= link_to image_tag("ny.jpg", :alt => "ny", :class => "city"), :controller => 'listings', :action => 'city', :city => 'ny'%></td>
    </tr>
  </table>
</div>

