<h1>Send Message</h1> 

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p><br/>
<% end %>

<%= form_tag("/user/post_email", :method => "post", :multipart => true, :class => "form-horizontal", :role => "form") do %>
  <fieldset>
  <legend>New Message</legend>
  <div class="form-group">
    <%= label_tag(:subject, "Email Subject", :class => "col-md-4 control-label", :for => "text-input") %>
    <div class="col-md-4"><%= text_field_tag(:subject, nil, :class => "form-control input-md", :placeholder => "e.g. Can we visit?") %></div>
  </div>
  <div class="form-group">
    <%= label_tag(:body, "Body", :class => "col-md-4 control-label", :for => "text-input") %>
    <div class="col-md-4"><%= text_area_tag(:body, nil, :class => "form-control", :id => "textarea", :rows => "3") %></div>
  </div>
  <% if params[:linkedfrom] == 'listing' %>
    <%= hidden_field_tag(:listing, params[:listing]) %>
  <% end %>
  <%= hidden_field_tag(:receiver, params[:id]) %>
  <%= hidden_field_tag(:sender, @current_user.id) %>
  <%= hidden_field_tag(:linkedfrom, params[:linkedfrom]) %>
  <div class="form-group">
    <label class="col-md-4 control-label" for="singlebutton"></label>
    <div class="col-md-4">
      <%= submit_tag("Submit", :class=>"btn btn-primary", :id=>"singlebutton") %>
    </div>
  </div>

</fieldset>
<% end %>